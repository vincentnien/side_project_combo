            android:layout_weight="0.33"
            android:text="@string/priority3" />
        
        <Spinner android:id="@+id/btn_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.33"
            android:entries="@array/condition_list"
