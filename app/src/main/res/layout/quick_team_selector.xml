<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical" >

	<LinearLayout
		android:layout_width="0px"
		android:layout_height="0px"
		android:focusable="true"
		android:focusableInTouchMode="true" />

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="@dimen/image_size"
		android:layout_margin="1dp"
		android:background="@drawable/card"
		android:gravity="center"
		android:orientation="horizontal" >

		<ImageView
			android:id="@+id/leader1"
			android:layout_width="@dimen/image_size_s"
			android:layout_height="@dimen/image_size_s"
			android:padding="2dp"
			android:src="@drawable/i000" />

		<ImageView
			android:id="@+id/member1"
			android:layout_width="@dimen/image_size_s"
			android:layout_height="@dimen/image_size_s"
			android:padding="2dp"
			android:src="@drawable/i000" />

		<ImageView
			android:id="@+id/member2"
			android:layout_width="@dimen/image_size_s"
			android:layout_height="@dimen/image_size_s"
			android:padding="2dp"
			android:src="@drawable/i000" />

		<ImageView
			android:id="@+id/member3"
			android:layout_width="@dimen/image_size_s"
			android:layout_height="@dimen/image_size_s"
			android:padding="2dp"
			android:src="@drawable/i000" />

		<ImageView
			android:id="@+id/member4"
			android:layout_width="@dimen/image_size_s"
			android:layout_height="@dimen/image_size_s"
			android:padding="3dp"
			android:src="@drawable/i000" />

		<ImageView
			android:id="@+id/leader2"
			android:layout_width="@dimen/image_size_s"
			android:layout_height="@dimen/image_size_s"
			android:padding="2dp"
			android:src="@drawable/i000" />
	</LinearLayout>
	<!-- 
	           android:layout_width="@dimen/image_size_s"
            android:layout_height="@dimen/image_size_s"
	 -->

	<Button
		android:id="@+id/btn_team_edit"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:text="@string/str_done" />

	<RelativeLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
	    >
	
        <Button android:id="@+id/filter"
            android:layout_width="wrap_content"
    		android:layout_height="wrap_content"
    		android:text="@string/str_filter"
    		android:layout_alignParentRight="true"
            />

	</RelativeLayout>
    <ListView android:id="@android:id/list"
	    android:layout_width="match_parent"
	    android:layout_height="0dip"
	    android:layout_weight="1"
        >
        
    </ListView>

</LinearLayout>