<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal" >
    
    <TextView
           android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="@string/color_change"
          android:textColor="@android:color/black"
          android:layout_gravity="center_vertical" />
    <LinearLayout android:id="@+id/transform1"
    	   android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/from1"
            android:layout_width="@dimen/orb_size"
            android:layout_height="@dimen/orb_size" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrow"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />
        <ImageView android:id="@+id/to1"
            android:layout_width="@dimen/orb_size"
            android:layout_height="@dimen/orb_size" />
    </LinearLayout>
    <LinearLayout android:id="@+id/transform2"
           android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView android:id="@+id/from2"
            android:layout_width="@dimen/orb_size"
            android:layout_height="@dimen/orb_size"
            android:layout_marginLeft="20dip"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/arrow"
            android:textColor="@android:color/black"
            android:layout_gravity="center_vertical" />
        <ImageView android:id="@+id/to2"
            android:layout_width="@dimen/orb_size"
            android:layout_height="@dimen/orb_size" />
    </LinearLayout>
</LinearLayout>
