<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <Spinner
            android:id="@+id/spinner_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dip"
             />
        <LinearLayout
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
         >
            <Spinner android:id="@+id/single_up"
                        android:layout_width="0dp"
                    	android:layout_height="wrap_content"
                    	android:spinnerMode="dialog"
                    	android:layout_weight="1" />
	        <com.a30corner.combomaster.activity.ui.MultiSpinner android:id="@+id/sp_power_up"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:entries="@array/stage_power_up"
		        android:layout_weight="1"
	        />            
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/card"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/prev"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:text="&lt;" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_leader"
                    android:textColor="@android:color/black" />

                <RelativeLayout
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/leader1"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:padding="1dp"
                        android:src="@drawable/i000" />
                    <ImageView
                        android:id="@+id/assit1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/i000"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone" />
                </RelativeLayout>
                <TextView android:id="@+id/leader1_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/str_friend_leader"
                    android:textColor="@android:color/black" />

                <RelativeLayout
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/leader2"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:padding="1dp"
                        android:src="@drawable/i000" />
                    <ImageView
                        android:id="@+id/assit6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/i000"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone" />
                </RelativeLayout>
                <TextView android:id="@+id/leader2_plus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black" />
            </LinearLayout>

            <Button
                android:id="@+id/next"
                android:layout_width="50dip"
                android:layout_height="wrap_content"
                android:text="&gt;" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:background="@drawable/card"
            android:gravity="center"
            android:orientation="horizontal" >

            <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/member1"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:padding="3dp"
                        android:src="@drawable/i000" />
                    <ImageView
                        android:id="@+id/assit2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/i000"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone" />
                </RelativeLayout>
            <TextView android:id="@+id/member1_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
			</LinearLayout>
            <LinearLayout
            	android:layout_width="wrap_content"
            	android:layout_height="wrap_content"
            	android:gravity="center"
                android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/member2"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:padding="3dp"
                        android:src="@drawable/i000" />
                    <ImageView
                        android:id="@+id/assit3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/i000"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone" />
                </RelativeLayout>
            <TextView android:id="@+id/member2_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
			</LinearLayout>
            <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
                android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/member3"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:padding="3dp"
                        android:src="@drawable/i000" />
                    <ImageView
                        android:id="@+id/assit4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/i000"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone" />
                </RelativeLayout>
            <TextView android:id="@+id/member3_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
			</LinearLayout>
            <LinearLayout
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:gravity="center"
                android:orientation="vertical" >
                <RelativeLayout
                    android:layout_width="@dimen/image_size"
                    android:layout_height="@dimen/image_size"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:id="@+id/member4"
                        android:layout_width="@dimen/image_size"
                        android:layout_height="@dimen/image_size"
                        android:padding="3dp"
                        android:src="@drawable/i000" />
                    <ImageView
                        android:id="@+id/assit5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/i000"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:visibility="gone" />
                </RelativeLayout>
            <TextView android:id="@+id/member4_plus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
			</LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:orientation="horizontal" >
                    
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/card"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_total_hp"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_hp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/card"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/heart" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_recovery"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_recovery"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/card"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fire" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_power"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_fire"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/card"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/water" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_power"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_water"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/card"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/wood" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_power"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_wood"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/card"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/light" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_power"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_light"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@android:color/black" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:layout_weight="0.5"
                    android:background="@drawable/card"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dark" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_power"
                        android:textColor="@android:color/black" />

                    <TextView
                        android:id="@+id/tv_dark"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="0"
                        android:textColor="@android:color/black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <include
            android:id="@+id/aws_line_01"
            layout="@layout/awoken_line" />

        <include
            android:id="@+id/aws_line_02"
            layout="@layout/awoken_line" />

        <include
            android:id="@+id/aws_line_03"
            layout="@layout/awoken_line" />

        <include
            android:id="@+id/aws_line_04"
            layout="@layout/awoken_line" />

        <include
            android:id="@+id/potential_line_01"
            layout="@layout/awoken_line" />
        <include
            android:id="@+id/potential_line_02"
            layout="@layout/awoken_line" />
        
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/card"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_leader_skill"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/leader_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/card"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/str_friend_leader_skill"
                android:textColor="@android:color/black" />

            <TextView
                android:id="@+id/friend_leader_skill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/btn_edit_team"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/str_edit" />
    </LinearLayout>

</ScrollView>